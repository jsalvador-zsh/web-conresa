---
import img1 from "../images/gallery/cusco-gallery.jpg";
import img2 from "../images/gallery/arequipa-gallery.jpg";
import img3 from "../images/gallery/colca-gallery.jpg";
import img4 from "../images/gallery/alpaca-gallery.jpg";

import { Image } from "astro:assets";

const images = [
    { src: img2, title: "Arequipa" },
    { src: img3, title: "Colca" },
    { src: img1, title: "Cusco" },
    { src: img4, title: "Alpacas" },
];
---

<section class="py-8 max-w-7xl mx-auto px-4">
    <h2 class="text-center">Destinos</h2>
    <div class="flex items-center justify-center">
        <div class="w-full max-w-6xl h-[600px] flex flex-col gap-4 group">
            {
                images.map((img, index) => (
                    <div
                        data-key={index}
                        class="relative h-[20%] overflow-hidden cursor-pointer rounded-md transition-all duration-500 ease-in-out group-hover:[&:not(:hover)_img]:grayscale hover:h-[80%]"
                    >
                        <Image
                            src={img.src}
                            alt={`Imagen ${index + 1}`}
                            class="w-full h-full object-cover transition-all duration-500"
                        />

                        <div class="absolute left-0 top-1/2 -translate-y-1/2 bg-black/60 px-6 py-4 rounded-r-md text-white w-fit max-w-[80%]">
                            <p class="text-xl md:text-2xl font-semibold">
                                {img.title}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
