---
// components/LinkButton.astro
interface Props {
  text?: string;
  href: string;
  className?: string;
  target?: string;
  rel?: string;
}

const { 
  text = "Get Started", 
  href = "#",
  className = "",
  target = "_self",
  rel = "noopener noreferrer"
} = Astro.props;
---

<div class={`group active:scale-95 p-[5px] bg-[#008080]/15 rounded-[16px] duration-200 ${className}`}>
  <div class="p-[2px] bg-[#008080] rounded-[11px]">
    <a 
      href={href}
      target={target}
      rel={target === "_blank" ? rel : undefined}
      class="relative w-full py-2.5 px-12 bg-[#008080] rounded-[9px] text-sm sm:text-base font-medium tracking-[-0.14px] sm:tracking-[-0.16px] text-white overflow-hidden inline-flex justify-center"
    >
      <span class="relative z-10 flex justify-center items-center gap-3">
        {text}
        <span class="relative">
          <svg width="9" height="10" viewBox="0 0 9 10" fill="none" xmlns="http://www.w3.org/2000/svg" class="relative -left-[4px] group-hover:-left-0 duration-200">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M3.21967 0.21967C3.51256 -0.0732232 3.98744 -0.0732232 4.28033 0.21967L8.28033 4.21967C8.57322 4.51256 8.57322 4.98744 8.28033 5.28033L4.28033 9.2803C3.98744 9.5732 3.51256 9.5732 3.21967 9.2803C2.92678 8.98744 2.92678 8.51256 3.21967 8.21967L6.68934 4.75L3.21967 1.28033C2.92678 0.98744 2.92678 0.51256 3.21967 0.21967Z" class="fill-white/75 group-hover:fill-white duration-200"></path>
          </svg>
          <svg width="9" height="10" viewBox="0 0 9 10" fill="none" xmlns="http://www.w3.org/2000/svg" class="absolute top-0 left-0">
            <rect y="4" height="1.5" rx="0.75" class="w-[7px] fill-white opacity-0 group-hover:opacity-100 duration-200"></rect>
          </svg>
        </span>
      </span>
      <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-white/25 to-white/5 opacity-0 group-hover:opacity-100 duration-200"></div>
    </a>
  </div>
</div>