<section
    id="background-hero"
    class="bg-cover bg-center bg-no-repeat relative overflow-hidden"
    x-data="{
    images: ['/images/paquetes/imagen-default.svg', '/images/paquetes/imagen-default.svg', '/images/paquetes/imagen-default.svg', '/images/paquetes/imagen-default.svg', '/images/paquetes/imagen-default.svg'],
    currentIndex: 0,
    isChanging: false
  }"
    x-init="setInterval(() => {
    isChanging = true;
    setTimeout(() => {
      currentIndex = (currentIndex + 1) % images.length;
      isChanging = false;
    }, 1000);
  }, 4000)"
    :class="{ 'slide-left': isChanging }"
>
    <div
        class="absolute inset-0 bg-cover bg-center bg-no-repeat slide-transition"
        :style="'background-image: url(' + images[currentIndex] + ');'"
        :class="{ 'slide-left': isChanging }"
    >
    </div>
    <div
        class="py-30 grid grid-cols-1 md:grid-cols-2 container mx-auto p-4 relative"
    >
        <div class="p-8 bg-black/50 text-white">
            <h2 class="text-4xl md:text-6xl font-semibold mb-6">
                Descubre el Perú con nosotros
            </h2>
            <div class="text-lg md:text-xl">
                <p class="text-pretty">
                    Viaja a los destinos más increíbles, vive experiencias
                    únicas y memorables.
                </p>
            </div>
        </div>
        <div></div>
    </div>
</section>
