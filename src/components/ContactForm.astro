---
// src/components/ContactForm.astro
const contactInfo = {
  phone: "+51 123 456 789",
  email: "info@conresatours.com"
};
---

<div class="relative overflow-hidden py-24 min-h-[600px]">
  <!-- Fondo con efecto parallax -->
  <div class="parallax-bg absolute inset-0 z-0">
    <img 
      src="/images/paquetes/imagen-default.svg" 
      alt="Fondo de contacto"
      class="w-full h-full object-cover"
      loading="eager"
    />
    <div class="absolute inset-0 bg-[#3D7872] opacity-60 mix-blend-multiply"></div>

  </div>

  <!-- Contenido del formulario -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center animate-fade-in">
      <!-- Texto introductorio -->
      <div class="text-white">
        <h2 class="text-4xl font-bold mb-6">Contáctanos</h2>
        <p class="text-xl mb-8">
          ¿Listo para comenzar tu próxima aventura? Completa el formulario y nos pondremos en contacto contigo.
        </p>
        <div class="space-y-4">
          <div class="flex items-center">
            <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span>${contactInfo.phone}</span>
          </div>
          <div class="flex items-center">
            <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span>${contactInfo.email}</span>
          </div>
        </div>
      </div>

      <!-- Formulario -->
      <form class="bg-white shadow-2xl p-8 animate-slide-up">
        <div class="mb-6">
          <label for="name" class="block text-gray-700 mb-2">Nombre completo</label>
          <input 
            type="text" 
            id="name" 
            class="w-full px-4 py-3 border border-gray-300 focus:ring-2 focus:ring-[#3D7872] focus:border-transparent"
            required
          >
        </div>
        
        <div class="mb-6">
          <label for="email" class="block text-gray-700 mb-2">Correo electrónico</label>
          <input 
            type="email" 
            id="email" 
            class="w-full px-4 py-3 border border-gray-300 focus:ring-2 focus:ring-[#3D7872] focus:border-transparent"
            required
          >
        </div>
        
        <div class="mb-6">
          <label for="phone" class="block text-gray-700 mb-2">Teléfono</label>
          <input 
            type="tel" 
            id="phone" 
            class="w-full px-4 py-3 border border-gray-300 focus:ring-2 focus:ring-[#3D7872] focus:border-transparent"
          >
        </div>
        
        <div class="mb-6">
          <label for="message" class="block text-gray-700 mb-2">Mensaje</label>
          <textarea 
            id="message" 
            rows="4"
            class="w-full px-4 py-3 border border-gray-300 focus:ring-2 focus:ring-[#3D7872] focus:border-transparent"
            required
          ></textarea>
        </div>
        
        <button 
          type="submit"
          class="w-full bg-[#3D7872] text-white py-3 px-6 hover:bg-[#2c5a55] transition-colors duration-300 cursor-pointer"
        >
          Enviar mensaje
        </button>
      </form>
    </div>
  </div>
</div>

<style is:global>
  .parallax-bg {
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    transform: translateZ(0);
    will-change: transform;
  }
  
  /* Animaciones CSS puras */
  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
  }
  
  .animate-slide-up {
    animation: slideUp 0.8s ease-out 0.2s both;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideUp {
    from { 
      opacity: 0;
      transform: translateY(30px);
    }
    to { 
      opacity: 1;
      transform: translateY(0);
    }
  }
  
</style>