---
// src/pages/blog/[slug].astro
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Markdown } from 'astro/components';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout 
  title={post.data.title} 
  description={post.data.description}
  image={post.data.image.url}
>
  <main class="container mx-auto px-4 py-8 max-w-3xl">
    <article class="prose prose-lg mx-auto">
      <header class="mb-12">
        <h1 class="text-4xl font-bold mb-4">{post.data.title}</h1>
        <div class="flex items-center gap-4 text-gray-600">
          <span>Por {post.data.author}</span>
          <span>â€¢</span>
          <time>
            {new Date(post.data.pubDate).toLocaleDateString('es-ES', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
        </div>
        {post.data.image && (
          <img
            src={post.data.image.url}
            alt={post.data.image.alt}
            class="w-full h-64 object-cover rounded-lg mt-6"
            loading="eager"
          />
        )}
      </header>

      <Content />

      <footer class="mt-12 pt-6 border-t border-gray-200">
        <div class="flex flex-wrap gap-2">
          {post.data.tags.map(tag => (
            <a 
              href={`/blog/tags/${tag.toLowerCase()}`}
              class="bg-gray-100 hover:bg-gray-200 text-gray-800 px-3 py-1 rounded-full text-sm transition-colors"
            >
              #{tag}
            </a>
          ))}
        </div>
      </footer>
    </article>
  </main>
</Layout>

<style>
  .prose {
    max-width: 100%;
  }
  .prose img {
    border-radius: 0.5rem;
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
  }
  .prose a {
    color: #2C5E5E;
    text-decoration: none;
    font-weight: 500;
  }
  .prose a:hover {
    text-decoration: underline;
  }
  .prose code {
    background-color: #f3f4f6;
    padding: 0.2em 0.4em;
    border-radius: 0.25rem;
    font-size: 0.9em;
  }
  .prose pre {
    background-color: #1e293b;
    color: #f8fafc;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }
</style>