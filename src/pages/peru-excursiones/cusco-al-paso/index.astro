---
// src/pages/cusco-al-paso.astro
import Layout from "../../../layouts/Layout.astro";
import tourData from "../../../data/cusco_al_paso.json";
import { Image } from "astro:assets";

// Importar imágenes
import cuscoHero from "../../../images/cusco/cusco.jpg";
import cusco from "../../../images/cusco/cusco-2.jpg";
import machupicchu from "../../../images/cusco/cusco-3.jpg";
import sacsayhuaman from "../../../images/cusco/sacsayhuaman.jpeg";
import koricancha from "../../../images/cusco/koricancha.jpg";
import valleSagrado from "../../../images/cusco/cusco-6.jpg";
import titicaca from "../../../images/puno/puno.jpg";
import ica from '../../../images/cusco/ica.jpg';

// Función para formatear precios
const formatPrice = (price: number) => {
  return new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
    minimumFractionDigits: 0
  }).format(price);
};
---

<Layout title={`${tourData.tour.title} | CONRESA TOURS`} description={tourData.tour.description}>
  <main>
    <!-- Hero Section -->
    <section class="relative h-[80vh] max-h-[900px] min-h-[500px] overflow-hidden">
      <Image
        src={cuscoHero}
        alt={tourData.tour.title}
        class="w-full h-full object-cover"
        width={1920}
        height={1080}
        format="webp"
        quality={80}
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/30 to-transparent flex items-center">
        <div class="container mx-auto px-6">
          <div class="text-center mx-auto max-w-6xl">
            <span class="cursive-font text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight mb-4 font-serif">
              {tourData.tour.title}
            </span>
            <p class="text-xl text-white">
              {tourData.tour.description}
            </p>
          </div>
        </div>
      </div>
    </section>

    <div class="container mx-auto px-6 py-12">
      <!-- Main Content Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        <!-- Left Column (Content) -->
        <div class="lg:col-span-8 space-y-12">
          <!-- Destinations Gallery - Bento Grid Style -->
          <section class="bg-white rounded-xl shadow-md p-6 md:p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-6 font-serif">Lo más destacado del tour</h2>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4 h-[500px]">
              <div class="relative overflow-hidden rounded-xl group col-span-2 row-span-2">
                <Image
                  src={machupicchu}
                  alt="Machu Picchu"
                  width={800}
                  height={600}
                  class="w-full h-full object-cover transition-all duration-500 group-hover:scale-105"
                  loading="eager"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent flex items-end p-6">
                  <h3 class="text-2xl font-bold text-white font-serif">Machu Picchu</h3>
                </div>
              </div>
              
              <div class="relative overflow-hidden rounded-xl group">
                <Image
                  src={sacsayhuaman}
                  alt="Sacsayhuamán"
                  width={400}
                  height={300}
                  class="w-full h-full object-cover transition-all duration-500 group-hover:scale-105"
                  loading="eager"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent flex items-end p-4">
                  <h3 class="text-lg font-bold text-white">Sacsayhuamán</h3>
                </div>
              </div>
              
              <div class="relative overflow-hidden rounded-xl group">
                <Image
                  src={koricancha}
                  alt="Koricancha"
                  width={400}
                  height={300}
                  class="w-full h-full object-cover transition-all duration-500 group-hover:scale-105"
                  loading="eager"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent flex items-end p-4">
                  <h3 class="text-lg font-bold text-white">Koricancha</h3>
                </div>
              </div>
              
              <div class="relative overflow-hidden rounded-xl group col-span-1 md:col-span-2">
                <Image
                  src={valleSagrado}
                  alt="Valle Sagrado"
                  width={800}
                  height={300}
                  class="w-full h-full object-cover transition-all duration-500 group-hover:scale-105"
                  loading="eager"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent flex items-end p-4">
                  <h3 class="text-lg font-bold text-white">Valle Sagrado</h3>
                </div>
              </div>
            </div>
          </section>

          <!-- Tour Description -->
          <section class="bg-white rounded-xl shadow-md p-6 md:p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-6 font-serif">Experiencia Express en Cusco</h2>
            <div class="prose max-w-none text-gray-700">
              <p class="text-lg">Este tour express ha sido diseñado para quienes disponen de poco tiempo pero desean conocer lo esencial de Cusco y Machu Picchu en una experiencia intensiva de 3 días.</p>
              
              <h3 class="text-xl font-semibold text-gray-900 mt-8">Itinerario resumido</h3>
              <ul class="space-y-3">
                {tourData.tour.days.map(day => (
                  <li class="pl-4 border-l-2 border-[#48887F]">
                    <strong class="text-gray-900">Día {day.day}:</strong> {day.title} {day.overnight && <span class="text-[#48887F]">• Pernocte en {day.overnight}</span>}
                  </li>
                ))}
              </ul>
            </div>
          </section>

          <!-- Detailed Itinerary -->
          <section class="bg-white rounded-xl shadow-md overflow-hidden">
            <div class="bg-[#48887F] p-6 md:p-8">
              <span class="cursive-subtitle text-3xl font-bold text-white font-serif">Itinerario Detallado</span>
            </div>
            <div class="p-6 md:p-8 space-y-8">
              {tourData.tour.days.map(day => (
                <div class="border-l-4 border-[#48887F] pl-6">
                  <div class="flex items-start gap-4">
                    <div class="bg-[#48887F] text-white font-bold rounded-full w-10 h-10 flex items-center justify-center flex-shrink-0 shadow-md">
                      {day.day}
                    </div>
                    <div>
                      <h3 class="text-xl font-bold text-gray-900">{day.title}</h3>
                      {day.overnight && (
                        <p class="text-sm text-gray-500 mt-1">
                          <span class="font-medium">Pernocte:</span> {day.overnight}
                        </p>
                      )}
                    </div>
                  </div>
                  <div class="prose max-w-none text-gray-700 mt-4 pl-14">
                    <ul class="space-y-2">
                      {day.activities.map(activity => (
                        <li class="flex items-start">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#48887F] mr-2 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                          <span>{activity}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              ))}
            </div>
          </section>

          <!-- Luxury Hotels -->
          <section class="bg-white rounded-xl shadow-md overflow-hidden">
            <div class="bg-[#48887F] p-6 md:p-8">
              <span class="cursive-subtitle text-3xl font-bold text-white font-serif">Opciones de Alojamiento</span>
            </div>
            <div class="p-6 md:p-8">
              <div class="space-y-6">
                {tourData.tour.pricing.categories.map(category => (
