---
// src/pages/cusco-al-paso.astro
import Layout from "../../../layouts/Layout.astro";
import tourData from "../../../data/cusco_al_paso.json";

import cuscoHero from "../../../images/cusco/cusco.jpg";
import machupicchu from "../../../images/cusco/cusco-3.jpg";
import sacsayhuaman from "../../../images/cusco/sacsayhuaman.jpeg";
import koricancha from "../../../images/cusco/koricancha.jpg";
import { Image } from "astro:assets";
---

<Layout
  title={`${tourData.tour.title} | CONRESA TOURS`}
  description="Tour express de 3 días para descubrir lo esencial de Cusco y Machu Picchu"
>
  <div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <div class="relative h-[500px] overflow-hidden">
      <Image
        src={cuscoHero}
        alt="Vista panorámica de Cusco"
        class="w-full h-full object-cover"
        width={1200}
        height={500}
        loading="eager"
      />
      <div class="absolute inset-0 bg-black/40 flex items-center justify-center">
        <div class="text-center px-4">
          <span class="cursive-font text-4xl md:text-8xl font-bold text-white mb-4">
            {tourData.tour.title}
          </span>
          <p class="text-xl text-white mb-6">{tourData.tour.description}</p>
          <!-- <p class="text-white font-medium">Código: {tourData.tour.code}</p> -->
        </div>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Itinerario -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-[#48887F] mb-8 text-center">
          Itinerario Detallado
        </h2>
        
        <div class="space-y-8">
          {tourData.tour.days.map((day, index) => (
            <div 
              class="bg-white rounded-xl shadow-lg overflow-hidden"
              id={`day-${index + 1}`}
            >
              <div class="p-6 md:p-8">
                <div class="flex items-start">
                  <div class="bg-[#48887F] text-white rounded-full w-10 h-10 flex items-center justify-center mr-4 mt-1 flex-shrink-0 font-bold text-xl">
                    {day.day}
                  </div>
                  <div>
                    <h3 class="text-2xl font-bold text-gray-800 mb-3">
                      {day.title}
                    </h3>
                    <ul class="space-y-3">
                      {day.activities.map(activity => (
                        <li class="flex items-start">
                          <svg class="w-5 h-5 text-[#48887F] mr-2 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                          </svg>
                          <span class="text-gray-700">{activity}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>
              
              {day.overnight && (
                <div class="bg-gray-50 px-6 py-4 border-t border-gray-200">
                  <p class="font-medium text-gray-700">
                    <span class="text-[#48887F]">Pernocte:</span> {day.overnight}
                  </p>
                </div>
              )}
            </div>
          ))}
        </div>
      </section>

      <!-- Highlights -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-[#48887F] mb-8 text-center">
          Lo más destacado del tour
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-white rounded-xl shadow-md overflow-hidden group hover:shadow-lg transition-shadow">
            <div class="h-48 overflow-hidden">
              <Image
                src={sacsayhuaman}
                alt="Sacsayhuamán"
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                width={400}
                height={300}
              />
            </div>
            <div class="p-6">
              <h3 class="font-bold text-xl mb-3">City Tour en Cusco</h3>
              <p class="text-gray-700">
                Descubre los principales atractivos de la capital del Imperio Inca, incluyendo Sacsayhuamán y el Koricancha.
              </p>
            </div>
          </div>
          
          <div class="bg-white rounded-xl shadow-md overflow-hidden group hover:shadow-lg transition-shadow">
            <div class="h-48 overflow-hidden">
              <Image
                src={machupicchu}
                alt="Machu Picchu"
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                width={400}
                height={300}
              />
            </div>
            <div class="p-6">
              <h3 class="font-bold text-xl mb-3">Machu Picchu</h3>
              <p class="text-gray-700">
                Visita una de las 7 Maravillas del Mundo Moderno con un tour guiado por sus principales sectores.
              </p>
            </div>
          </div>
          
          <div class="bg-white rounded-xl shadow-md overflow-hidden group hover:shadow-lg transition-shadow">
            <div class="h-48 overflow-hidden">
              <Image
                src={koricancha}
                alt="Koricancha"
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                width={400}
                height={300}
              />
            </div>
            <div class="p-6">
              <h3 class="font-bold text-xl mb-3">Patrimonio Cultural</h3>
              <p class="text-gray-700">
                Explora la rica herencia incaica y colonial en los principales monumentos de Cusco.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Hoteles -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-[#48887F] mb-8 text-center">
          Categorías de Hoteles
        </h2>
        
        <div class="overflow-x-auto">
          <table class="min-w-full bg-white rounded-lg overflow-hidden shadow-lg">
            <thead class="bg-[#48887F] text-white">
              <tr>
                <th class="py-4 px-6 text-left">Categoría</th>
                <th class="py-4 px-6 text-left">Precio por persona</th>
                <th class="py-4 px-6 text-left">Hoteles en Cusco</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              {tourData.tour.pricing.categories.map((category, index) => (
                <tr class={index % 2 === 0 ? 'bg-white' : 'bg-gray-50'}>
                  <td class="py-4 px-6 font-semibold">{category.name}</td>
                  <td class="py-4 px-6">USD$ {category.price}</td>
                  <td class="py-4 px-6">
                    <ul class="list-disc pl-5">
                      {category.hotels.Cusco.map(hotel => (
                        <li class="text-gray-700">{hotel}</li>
                      ))}
                    </ul>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
        
        <div class="mt-4 text-sm text-gray-600">
          <p class="font-semibold">Incluye: {tourData.tour.pricing.categories[0].includes.join(', ')}</p>
        </div>
      </section>

      <!-- Inclusions -->
      <section class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        <div class="bg-white p-8 rounded-xl shadow-lg">
          <h3 class="text-2xl font-bold text-[#48887F] mb-6">Incluye</h3>
          <ul class="space-y-3">
            {tourData.tour.inclusions.included.map(item => (
              <li class="flex items-start">
                <svg class="w-5 h-5 text-[#48887F] mr-2 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700">{item}</span>
              </li>
            ))}
          </ul>
        </div>
        
        <div class="bg-white p-8 rounded-xl shadow-lg">
          <h3 class="text-2xl font-bold text-[#48887F] mb-6">No Incluye</h3>
          <ul class="space-y-3">
            {tourData.tour.inclusions.not_included.map(item => (
              <li class="flex items-start">
                <svg class="w-5 h-5 text-red-500 mr-2 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span class="text-gray-700">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </section>

      <!-- Vuelos Sugeridos -->
      <section class="bg-white p-8 rounded-xl shadow-lg mb-16">
        <h2 class="text-2xl font-bold text-[#48887F] mb-6">Vuelos Sugeridos</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {tourData.tour.flight_suggestions.routes.map(flight => (
            <div class="border border-gray-200 rounded-lg p-4">
              <h3 class="font-bold text-lg mb-2">{flight.route}</h3>
              <div class="flex justify-between">
                <div>
                  <p class="text-gray-600">Salida</p>
                  <p class="font-medium">{flight.departure}</p>
                </div>
                <div>
                  <p class="text-gray-600">Llegada</p>
                  <p class="font-medium">{flight.arrival}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </section>

      <!-- CTA -->
      <section class="bg-gradient-to-r from-[#48887F] to-[#2a5e5e] text-white p-12 rounded-2xl shadow-2xl text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">¿Listo para vivir esta experiencia?</h2>
        <p class="text-xl mb-8 max-w-3xl mx-auto">
          Contáctanos para reservar tu tour o recibir más información
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a 
            href="tel:+51987654321" 
            class="bg-white text-[#48887F] hover:bg-gray-100 font-bold py-3 px-8 rounded-lg transition duration-300 flex items-center justify-center"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            +51 987 654 321
          </a>
          <a 
            href="mailto:reservas@conresatours.com" 
            class="bg-transparent border-2 border-white hover:bg-white/10 font-bold py-3 px-8 rounded-lg transition duration-300 flex items-center justify-center"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            reservas@conresatours.com
          </a>
        </div>
      </section>
    </div>
  </div>
</Layout>