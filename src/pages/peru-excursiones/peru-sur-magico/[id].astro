                  <div class="mt-2 text-yellow-700">
                    <ul class="list-disc pl-5 space-y-1">
                      {tour.importantNotes.map(note => (
                        <li>{note}</li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>
            </section>
          )}
        </div>

        <!-- Right Column (Sidebar) -->
        <div class="lg:col-span-4 space-y-6">
          <!-- Booking Card -->
          <div class="bg-white rounded-xl shadow-sm p-6 sticky top-6">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Reserva este tour</h3>
            
            <div class="space-y-4 mb-6">
              {tour.hotelCategories.map(category => (
                <div class="border border-gray-200 rounded-lg p-4 hover:border-[#2C5E5E] transition-colors">
                  <div class="flex justify-between items-center">
                    <span class="font-medium text-gray-900">{category.category}</span>
                    <span class="font-bold text-[#2C5E5E]">{formatPrice(category.price)}</span>
                  </div>
                </div>
              ))}
            </div>
            
            <a 
              href="/#contacto" 
              class="block w-full bg-[#2C5E5E] hover:bg-[#1E4A4A] text-white font-bold py-3 px-4 rounded-lg text-center transition-colors duration-300 mb-4"
            >
              Consultar disponibilidad
            </a>
            
            <div class="flex items-center justify-center space-x-2 text-sm text-gray-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>{tour.duration}</span>
            </div>
          </div>

          <!-- Highlights Card -->
          <div class="bg-white rounded-xl shadow-sm p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Destinos principales</h3>
            <div class="space-y-4">
              {destinosPrincipales.map(destino => (
                <div class="flex items-start space-x-4">
                  <div class="flex-shrink-0 w-16 h-16 rounded-md overflow-hidden">
                    <Image
                      src={highlightImages[destino as keyof typeof highlightImages]}
                      alt={destino}
                      width={64}
                      height={64}
                      class="w-full h-full object-cover"
                    />
                  </div>
                  <div>
                    <h4 class="font-medium text-gray-900">{destino}</h4>
                    <p class="text-sm text-gray-500">Experiencias únicas</p>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- Why Choose Us -->
          <div class="bg-white rounded-xl shadow-sm p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-4">¿Por qué elegirnos?</h3>
            <div class="space-y-4">
              <div class="flex items-start space-x-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#2C5E5E] flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
                <div>
                  <h4 class="font-medium text-gray-900">Experiencia garantizada</h4>
                  <p class="text-sm text-gray-600">Más de 15 años creando experiencias inolvidables</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#2C5E5E] flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                </svg>
                <div>
                  <h4 class="font-medium text-gray-900">Precios competitivos</h4>
                  <p class="text-sm text-gray-600">Las mejores tarifas sin sacrificar calidad</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#2C5E5E] flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                <div>
                  <h4 class="font-medium text-gray-900">Soporte 24/7</h4>
                  <p class="text-sm text-gray-600">Asistencia durante todo tu viaje</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .prose {
    line-height: 1.7;
    color: #374151;
  }
  .prose p {
    margin-bottom: 1.25em;
  }
  .prose ul {
    list-style-type: disc;
    padding-left: 1.5em;
    margin-bottom: 1.25em;
  }
