              <a href="/peru-excursiones/camino-inca/CT8425.I.2">
                <div class="relative h-48 overflow-hidden">
                  <Image
                    src={machupicchu}
                    alt={`Imagen de paquete tour`}
                    class="w-full h-full object-cover"
